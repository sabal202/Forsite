<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/log_textview"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:clickable="false"
        android:enabled="true"
        android:scrollbars="vertical"
        android:textColor="@color/abc_primary_text_material_light"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/walls" />

        <ImageView
            android:id="@+id/BeaconImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/beacon_nonselected" />

        <ImageView
            android:id="@+id/BeaconImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/BeaconImage1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/BeaconImage1"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:background="@drawable/beacon_nonselected" />

        <ImageView
            android:id="@+id/BeaconImage6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BeaconImage1"
            android:layout_alignStart="@+id/BeaconImage1"
            android:layout_below="@+id/BeaconImage1"
            android:layout_marginTop="60dp"
            android:background="@drawable/beacon_nonselected" />

        <ImageView
            android:id="@+id/BeaconImage5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BeaconImage6"
            android:layout_alignStart="@+id/BeaconImage6"
            android:layout_below="@+id/BeaconImage6"
            android:layout_marginTop="70dp"
            android:background="@drawable/beacon_nonselected" />

        <ImageView
            android:id="@+id/BeaconImage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BeaconImage2"
            android:layout_alignStart="@+id/BeaconImage2"
            android:layout_alignTop="@+id/BeaconImage6"
            android:background="@drawable/beacon_nonselected" />

        <ImageView
            android:id="@+id/BeaconImage4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BeaconImage3"
            android:layout_alignStart="@+id/BeaconImage3"
            android:layout_alignTop="@+id/BeaconImage5"
            android:background="@drawable/beacon_nonselected" />


    </RelativeLayout>


</LinearLayout>
